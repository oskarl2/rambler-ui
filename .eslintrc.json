{
  "root": true,
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jasmine": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "babel",
    "import"
  ],
  "rules": {
    "react/jsx-uses-vars": 1,
    "react/jsx-uses-react": 1,
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "comma-dangle": [
      "warn",
      "never"
    ],
    "object-curly-spacing": "off",
    "max-len": [
      "warn",
      200
    ],
    "no-unused-expressions": [
      "error",
      {
        "allowShortCircuit": true
      }
    ],
    "prefer-template": "off",
    "one-var": "off",
    "one-var-declaration-per-line": "off",
    "no-confusing-arrow": "off",
    "padded-blocks": "off",
    "arrow-body-style": [
      "error",
      "as-needed"
    ],
    "curly": [
      "error",
      "multi",
      "consistent"
    ],
    "no-param-reassign": "off",
    "consistent-return": "off",
    "no-underscore-dangle": [
      "error",
      {
        "allowAfterThis": true
      }
    ],
    "no-nested-ternary": "off",
    "import/no-unresolved": "off",
    "import/extensions": "off",
    "import/no-extraneous-dependencies": "off",
    "func-names": "off",
    "radix": "off",
    "react/jsx-equals-spacing": [
      "error",
      "never"
    ],
    "no-prototype-builtins": "off"
  },
  "settings": {
    "import/core-modules": [
      "react"
    ]
  }
}
